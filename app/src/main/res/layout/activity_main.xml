<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/starbucks"
	tools:context=".MainActivity">

	<ImageView
		android:id="@+id/bg"
		android:contentDescription="@string/bg_description"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:src="@drawable/starbucks"
		android:scaleType="centerCrop"/>

	<RelativeLayout
		android:id="@+id/content"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/brand"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:text="@string/brand"
			android:textColor="#00704A"
			android:textSize="50sp"
			android:textAlignment="center"
			android:textStyle="bold"
			android:fontFamily="casual"
			android:paddingVertical="10dp"
			android:paddingHorizontal="20dp"
			android:layout_marginTop="60dp"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"/>

		<TextView
			android:id="@+id/address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#00704A"
			android:text="@string/address"
			android:textColor="@color/white"
			android:textSize="32.5sp"
			android:textAlignment="center"
			android:fontFamily="casual"
			android:layout_marginHorizontal="10dp"
			android:paddingVertical="10dp"
			android:paddingHorizontal="12.5dp"
			android:layout_above="@id/schedule"
			android:layout_centerHorizontal="true"/>

		<TextView
			android:id="@+id/schedule"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:text="@string/schedule"
			android:textColor="#00704A"
			android:textSize="40sp"
			android:textAlignment="center"
			android:textStyle="italic"
			android:fontFamily="casual"
			android:paddingVertical="10dp"
			android:paddingHorizontal="20dp"
			android:layout_marginVertical="30dp"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"/>
	</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>